{# empty Twig template #}
{% extends '::templateAll.html.twig' %}

{% block body -%}    
    {% block container %}

        <div class="row">

            <div class="col-md-3">
                 <p class="lead">HelpDesk</p>
                <div class="list-group">
                    <a href="{{path('cliente_home', {'userId': usuario.id } )}}" class="list-group-item">Início</a>
                    <a href="{{path('login')}}" class="list-group-item">Sair</a>
                </div>
                
                <p class="lead">Chamadas</p>
                <div class="list-group">
                    <a href="{{path('abrir_chamada', { 'userId': usuario.id } )}}" class="list-group-item">Abrir Chamada</a>
                    <a href="#" class="list-group-item">Minhas Chamadas</a>
                    <a href="{{path('todas_chamadas_admin', { 'userId': usuario.id })}}" class="list-group-item">Ver Todas Chamadas</a>
                    <a href="{{path('sem_prioridade', { 'userId': usuario.id } )}}" class="list-group-item">Sem Prioridade</a>
                    <a href="{{path('chamadas_em_aberto', { 'userId': usuario.id } )}}" class="list-group-item">Em Aberto</a>
                    <a href="{{path('chamadas_em_andamento', { 'userId': usuario.id } )}}" class="list-group-item">Em Andamento</a>
                    <a href="{{path('chamadas_finalizadas', { 'userId': usuario.id } )}}" class="list-group-item">Finalizadas</a>
                    <a href="{{path('login')}}" class="list-group-item">Sair</a>
                </div>
            </div>

            <div class="col-md-9">
                {{form_start(form, { 'attr': {'class':'form-horizontal well'} })}}
                <fieldset>
                    <legend>Definir Prioridade</legend>
                    <div class="col-lg-12">
                        <label class="control-label" for="input01">Solicitante: </label>
                        <div class="controls">
                            <input class="form-control input-xlarge" value="{{chamada.cliente}}" disabled="true">
                            <p class="help-block">Nome do usuário solicitante.</p>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <label class="control-label" for="descricaoProblema">Descrição:</label>
                        <div class="controls">
                            <textarea rows="5" class="form-control input-xlarge" disabled="true">{{chamada.observacoes}}</textarea>
                            {{form_widget(form.descricaoProblema, { 'attr':{'style':'display: none;'} })}}
                            {#                            {{form_errors(form.descricaoProblema) }}#}
                        </div>
                        <p class="help-block">Descrição do problema ocorrido.</p>
                    </div>
                    <div class="col-lg-6">
                        <label class="control-label" for="select01">Local onde ocorreu o problema:</label>
                        <div class="controls">
                            <input class="form-control input-xlarge" value="{{chamada.chamadaLocal}}" disabled="True" />
                            {{form_widget(form.chamadaLocal,{'attr':{'style':'display: none;'} }) }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label class="control-label" for="select01">Categoria do problema:</label>
                        <div class="controls">
                            <input class="form-control input-xlarge" value="{{chamada.chamadaCategoria}}" disabled="True" />
                            {{form_widget(form.chamadaCategoria,{'attr':{'style':'display: none;'} }) }}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <label class="control-label" for="textarea">Observações:</label>
                        <div class="controls">
                            <textarea rows="3" class="form-control input-xlarge" disabled="true">{{chamada.observacoes}}</textarea>
                            {{ form_widget(form.observacoes, { 'attr':{'style':'display: none;'} }) }}
                            <p class="help-block">Observações quanto ao problema ocorrido</p>
                        </div>
                    </div>
                    {{ form_widget(form.contatoAdicional2,{'attr':{'style':'display: none;'},'disabled':'true' }) }}
                    {{ form_widget(form.contatoAdicional1, {'attr':{'style':'display:none;'},'disabled':'true' }) }}
                    <div class="col-lg-6">
                        <label class="control-label" for="input01">Prioridade do Chamado: </label>
                        <div class="controls">
                            {{form_widget(form.chamadaNivel) }}
                            <p class="help-block">Nivel de prioridade do problema.</p>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="form-actions">
                            {{ form_widget(form.submit, { 'attr' : {'class': 'btn btn-primary'}, 'label':'Salvar' }) }}
                        </div>
                    </div>
                </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    {% endblock %}

{% endblock %}